.wrap
	span #[h1 Paper sliceforms] #[h4(st) designed and assembled by Yongquan Lu]
	for category in categories
		h2 #{category.title}
		ul.g
			for image in category.items
				li
					figure.centered
						.thumb
							if (image.slfm)
								a(href="/images/gallery/full/#{image.filename}", data-lightbox="#{image.filename}" data-title="#{image.title} (#{image.year})")
									img(src="/images/gallery/thumbs/#{image.filename}", alt="#{image.title}")
									.overlay Click to see schematic
							else
								a(href="/images/gallery/#{image.filename}", data-lightbox="#{image.filename}" data-title="#{image.title} (#{image.year})")
									img(src="/images/gallery/thumbs/#{image.filename}", alt="#{image.title}")
									.overlay Click to see larger version
						figcaption
							label #{image.title} (#{image.year})
							.subcaption #{image.description}
							.subcaption(style="height: 19px;")
								if image.slfm
									a(href="/app.html?template=#{image.slfm}&strips=true") View in app
script(src='bower/lightbox2/dist/js/lightbox.js')
